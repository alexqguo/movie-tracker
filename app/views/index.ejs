<% include header %>
	
	<div class="container">
		
	  <h1>Movies</h1>
	  
  	<form id="movie-form" class="input-row">
		  <input id="movie-name" name="name" class="movie-name">

		  <span class="watched-by">Already watched by:</span>
		  <label for="movie-a">A:</label> <input id="movie-a" type="checkbox" name="a">
		  <label for="movie-s">S:</label> <input id="movie-s" type="checkbox" name="s">

		  <input type="submit" id="movie-submit" class="movie-submit" value="Submit!">
	  </form>

	  <div class="movie-list">
		  <%- movies %>
	  </div>

  </div>

<script type="text/javascript" src="/js/index.js"></script>
<% include footer %>